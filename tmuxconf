# remap prefix to Ctrl+a
set -g prefix C-a
unbind C-b
bind C-a send-prefix

# force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf

# quick pane cycling
unbind ^A
bind ^A select-pane -t :.+

# mouse actions
set -g mouse-mode on
set -g mouse-resize-pane on
set -g mouse-select-pane on
